<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 引入Spring Boot默认配置 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 彩色日志依赖的渲染类 -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter"/>

    <!-- 从Spring配置中获取应用名称 -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="application"/>

    <!-- 日志根目录 -->
    <property name="LOG_HOME" value="./logs/product-service"/>

    <!-- 日志输出格式（彩色） -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%clr([%d{yyyy-MM-dd HH:mm:ss.SSS}]){faint} %clr([%-5level]) %clr([${APP_NAME}]){cyan} %clr([%thread]){magenta} %clr([%logger{50}:%line]){cyan} %clr(-){faint} %m%n"/>

    <property name="FILE_LOG_PATTERN"
              value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5level] [${APP_NAME}] [%thread] [%logger{50}:%line] - %msg%n"/>

    <!-- ========================================= -->
    <!-- 控制台输出（Console Appender）             -->
    <!-- ========================================= -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ========================================= -->
    <!-- 文件输出 - INFO级别                        -->
    <!-- ========================================= -->
    <appender name="FILE_INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/product-service.log</file>

        <!-- 日志级别过滤器 - 只记录INFO及以上级别 -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>

        <!-- 滚动策略：按日期+大小滚动 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 日志文件命名格式：服务名.yyyy-MM-dd.索引.log -->
            <fileNamePattern>${LOG_HOME}/%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- 单个文件最大100MB -->
            <maxFileSize>100MB</maxFileSize>
            <!-- 保留30天 -->
            <maxHistory>30</maxHistory>
            <!-- 总文件大小最大10GB -->
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ========================================= -->
    <!-- 文件输出 - DEBUG级别（开发环境）            -->
    <!-- ========================================= -->
    <appender name="FILE_DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/product-service-debug.log</file>

        <!-- 只记录DEBUG级别 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/%d{yyyy-MM-dd}-debug.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ========================================= -->
    <!-- 文件输出 - ERROR级别（错误日志单独文件）     -->
    <!-- ========================================= -->
    <appender name="FILE_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/product-service-error.log</file>

        <!-- 只记录ERROR级别 -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/%d{yyyy-MM-dd}-error.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ========================================= -->
    <!-- 异步输出（提升性能）                       -->
    <!-- ========================================= -->
    <appender name="ASYNC_FILE_INFO" class="ch.qos.logback.classic.AsyncAppender">
        <!-- 引用FILE_INFO appender -->
        <appender-ref ref="FILE_INFO"/>
        <!-- 队列大小 -->
        <queueSize>512</queueSize>
        <!-- 丢弃阈值：当队列剩余容量小于此值时，丢弃TRACE/DEBUG/INFO日志 -->
        <discardingThreshold>0</discardingThreshold>
        <!-- 是否阻塞：false表示队列满时不阻塞，直接丢弃日志 -->
        <neverBlock>false</neverBlock>
    </appender>

    <appender name="ASYNC_FILE_ERROR" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE_ERROR"/>
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>false</neverBlock>
    </appender>

    <!-- ========================================= -->
    <!-- 日志级别配置                              -->
    <!-- ========================================= -->

    <!-- 业务代码日志级别 -->
    <logger name="com.bcu.edu" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_DEBUG"/>
        <appender-ref ref="ASYNC_FILE_INFO"/>
        <appender-ref ref="ASYNC_FILE_ERROR"/>
    </logger>

    <!-- SQL日志 -->
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_DEBUG"/>
    </logger>

    <!-- SQL参数绑定日志 -->
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_DEBUG"/>
    </logger>

    <!-- Spring框架日志 -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.web" level="DEBUG"/>
    <logger name="org.springframework.boot" level="INFO"/>

    <!-- OpenFeign日志 -->
    <logger name="org.springframework.cloud.openfeign" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_DEBUG"/>
    </logger>

    <!-- Consul服务注册日志 -->
    <logger name="org.springframework.cloud.consul" level="INFO"/>

    <!-- 文件上传日志 -->
    <logger name="org.springframework.web.multipart" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_DEBUG"/>
    </logger>

    <!-- 第三方库日志（减少噪音） -->
    <logger name="org.apache" level="WARN"/>
    <logger name="io.netty" level="WARN"/>
    <logger name="reactor" level="WARN"/>

    <!-- ========================================= -->
    <!-- 根日志配置                                -->
    <!-- ========================================= -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE_INFO"/>
        <appender-ref ref="ASYNC_FILE_ERROR"/>
    </root>

    <!-- ========================================= -->
    <!-- 环境特定配置（可选）                       -->
    <!-- ========================================= -->

    <!-- 开发环境：更详细的日志 -->
    <springProfile name="dev">
        <logger name="com.bcu.edu" level="DEBUG"/>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE_DEBUG"/>
            <appender-ref ref="ASYNC_FILE_INFO"/>
            <appender-ref ref="ASYNC_FILE_ERROR"/>
        </root>
    </springProfile>

    <!-- 生产环境：精简日志 -->
    <springProfile name="prod">
        <logger name="com.bcu.edu" level="INFO"/>
        <logger name="org.hibernate.SQL" level="WARN"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="WARN"/>
        <root level="WARN">
            <appender-ref ref="ASYNC_FILE_INFO"/>
            <appender-ref ref="ASYNC_FILE_ERROR"/>
        </root>
    </springProfile>

</configuration>